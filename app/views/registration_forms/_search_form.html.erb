<div class="col-md-12">
  <%= form_tag search_path, :method => 'get', class: 'form-search' do %>
    <div class="form-group col-sm-6 col-sm-offset-2">
      <%= text_field_tag :search, params[:search], class: 'input-medium search-query rounded form-control' %>
    </div>
    <div class="col-sm-2">
      <%= button_tag "Search", :name => nil, class: 'btn btn-block btn-success' %>
    </div>
  <% end %>
</div>
