  </div>
  <div id="alumni" style="display: none;">
  <%= f.input :alumni_year_of_passing, label:'Year Of Passing',:required => true %><br>
  <%= f.input :alumni_category,:required => true, label:'Category',:collection => [ "SBOA JC","SBOA MAT","SBOA MDU","SBOA CBE","SBOA MODEL","SBOA TRY","SBOA CENOFF","SBOA ERK"] %><br>
  <!-- <%#= f.input :alumni_marksheet_proof, as: :file,label:'Marksheet Proof',:required => true %><br> -->
</div>
  <div id="sbi-officers" style="display: none;">
  <%= f.input :sbi_officer_membership_no, label:'Membership No',:required => true %><br>
  <%= f.input :sbi_officer_branch,input_html: { id: 'sbi_officers_upper'}, label:'Branch',:required => true %><br/>
  <!-- <%#= f.input :sbi_id_proof, as: :file ,label:'ID Proof',:required => true %><br/> -->
  </div>
  
  <!-- <div id="rbi_proof" style="display: none;"><%#= f.input :rbi_proof, as: :file ,label:'RBI / SAIL Proof'%><br/></div> -->
  <!-- <div id="sail_proof" style="display: none;"><%#= f.input :sail_proof, as: :file,label:'SAIL Proof' %><br/></div> -->
  
  <div class="sibling-detail">
    <%# f.input, as: :radio%>
    <h4>Slibing(SBOA School Junior College Only)</h4>
     <p>
      <%= f.input :sibling,:required => true,as: :radio_buttons, collection: [['Yes',true],['No',false]]%><br/>

      <%#= collection_radio_buttons :sibling, [[true, 'Yes'] ,[false, 'No']], :first, :last %>
<!-- <input type="radio" name="group1" id="show" value="yes"> Yes -->
<!-- <input type="radio" name="group1" id="hide" value="no" > No<br> -->
  </p><br> 
  </div>

  <div id="showpage">
    <%= f.simple_fields_for :sibling_existing_parents do |sibling_existing_parent|%>
    <%= sibling_existing_parent.input :name,input_html: { id: 'sibling_name_upper'} %><br/>
    <%= sibling_existing_parent.input :class,input_html: { id: 'sibling_class_upper'},as: :select, :collection=>[['UKG','UKG'],['1st std','1st std'],['2nd std','2nd std'],['3rd std','3rd std'],['4th std','4th std'],['5th std','5th std'],['6th std','6th std'],['7th std','7th std'],['8th std','8th std'],['9th std','9th std'],['10th std','10th std'],['11th std','11th std'],['12th std','12th std']]%><br/>
    <%= sibling_existing_parent.input :sec,input_html: { id: 'section_upper'},label: "Section"%><br/>
    <%= sibling_existing_parent.input :admission_num,label: "Admission Number"%><br/>
    
    <% end %>
  </div>
  <div id="child_need">
    
    <p><%= f.input :child_special,:required => true,as: :radio_buttons, label:"Child With Special Needs",collection: [['Yes',true],['No',false]]%><br/></p>
  </div><br/>
  <div id="child_proof">
  <!-- <%#= f.input :child_with_special_needs_proof,label:"Child With Special Needs Proof", as: :file %><br/> -->
 </div><br>
  <div class="comm-detail"><h4>Communication Details</h4></div>
  <%= f.input :locality,:required => true, as: :select, :collection=>[['Anna Nagar(West/Extn)','Anna Nagar(West/Extn)'],['Anna Nagar(East)','Anna Nagar(East)'],['Padi','Padi'],['Koyambedu','Koyambedu'],['Villivakkam','Villivakkam'],['ICF','ICF'],['Kilpauk','Kilpauk'],['MMDA','MMDA'],['Choolaimedu','Choolaimedu'],['Kellys','Kellys'],['Perambur','Perambur'],['Shenoynagar','Shenoynagar'],['Kolathur','Kolathur'],['GKM Colony','GKM Colony'],['Retteri','Retteri'],['Mogappair(East/West)','Mogappair(East/West)'],['Arumbakkam','Arumbakkam'],['Aminjikarai','Aminjikarai'],['Korattur','Korattur'],['Ambattur','Ambattur'],['Agaram','Agaram'],['Metha Nagar','Metha Nagar'],['Ayanavaram','Ayanavaram'],['Ambattur OT','Ambattur OT'],['Redhills','Redhills'],['Athipet','Athipet'],['Periar Nagar','Periar Nagar'],['Choolai','Choolai'],['Vadapalani','Vadapalani'],['Nungambakkam','Nungambakkam'],['Chinmaya Nagar','Chinmaya Nagar'],['Nolambur','Nolambur'],['Kodambakkam','Kodambakkam'],['KK Nagar','KK Nagar'],['Virugambakkam','Virugambakkam'],['Saligramam','Saligramam'],['Moolakadai','Moolakadai'],['Madhavaram','Madhavaram'],['Jawahar Nagar','Jawahar Nagar'],['Purasawalkkam','Purasawalkkam'],['Ashok Nagar','Ashok Nagar'],['Chetpet','Chetpet'],['Ayyapakkam','Ayyapakkam'],['Madhuravoyal','Madhuravoyal'],['Other Places','Other Places']] %><br/>
  <h5>Residential Address</h5>
  <%= f.input :residental_address,input_html: { id: 'line1_upper'},label:'Line 1'%><br/>
  <%= f.input :residental_address2,input_html: { id: 'line2_upper'},label:'Line 2' %><br/>
  <%#= f.input :residental_address_proof, as: :file ,label:'Residential Address Proof'%>
  <%= f.input :pincode%><br/>
  <%= f.input :mobile_number, as: :tel, label:"Mobile Number" ,:required => true,:limit=>'10'%><br/>
  <%= f.input :landline_number , as: :tel,label:"Landline Number" %><br/>
  <%= f.input :email , as: :email ,:required => true %><br/>
  <div class="parent-detail"><h4>Parents / Guardian Occupation</h4></div>
  <div class="father-detail"><h4> a) Father's / Guardian Occupation</h4></div>
  <%= f.simple_fields_for :father_datas do |father_data|%>
    <%= father_data.input :name,input_html: { id: 'father_name_upper'},:label => "Father's / Guardian's Name"%><br/>
    <%= father_data.input :qualification, as: :select, :collection => [['Graduate','Graduate'],['Post Graduate','Post Graduate'],['Professional','Professional'],['Diploma Holders / Others','Diploma Holders / Others']]%><br/>
    <!-- <%#= father_data.input :qualification_proof, as: :file, label:"Qualification Proof" %><br/> -->
    <%= father_data.input :annual_income, label:"Annual Income", as: :select, :collection => [['Below One Lakh','Below One Lakh'],['1 to 2 Lakhs','1 to 2 Lakhs'],['2 to 3 Lakhs','2 to 3 Lakhs'],['3 to 4 Lakhs','3 to 4 Lakhs'],['4 to 5 Lakhs','4 to 5 Lakhs'],['Above 5 Lakhs','Above 5 Lakhs']]%><br/>
    <!-- <%#= father_data.input :income_proof, as: :file, label:"Income Proof" %><br/> -->
