<div class="new-page" align="left">
<%= simple_form_for @registration_form, :defaults => {:required => false},:html => { :class => 'form-horizontal' } do |f| %>
<div id="student_name">
  <%= f.input :name_of_student,input_html: { id: 'change_upper'},:required => true %><br/></div>
  <%= f.input :date_of_birth, input_html: { id: 'dob'},:required => true %><br/>
  
  <%= f.input :gender ,:required => true, as: :select, label: 'Gender', :collection => [['MALE',true],['FEMALE',false]]%><br/>
  <%= f.simple_fields_for :father_datas do |father_data|%>
    <%= father_data.input :name,input_html: { id: 'father_name_upper'},:label => "Father's / Guardian's Name"%><br/>
    <% end %>
  <%= f.simple_fields_for :mother_datas do |mother_data|%>
  <%= mother_data.input :name,input_html: { id: 'mother_name_upper'},:label => "Mother's Name"%><br/>
  <% end %>
  <%= f.input :nationality ,input_html: { id: 'nation_upper'},:required => true%><br/>
  <%= f.input :religion ,input_html: { id: 'religion_upper'},:required => true%><br/>
  <%= f.input :caste ,input_html: { id: 'caste_upper'},:required => true%><br/>
  <%= f.input :community_category ,:required => true, as: :select, label: 'Community Category', :collection => [['OC','OC'],['BC','BC'],['MBC','MBC'],['SC','SC'],['ST','ST'],['DNC','DNC']]%><br/>
