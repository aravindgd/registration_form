    <%= father_data.input :organisation_name%><br/>
    <%= father_data.input :organisation_address%><br/>
    <div id="father_data"><p><input type="radio" name="group2" id="private" value="0"> Private
    <input type="radio" name="group2" id="central" value="1" > Central Government
    <input type="radio" name="group2" id="state" value="2"> State Government
    <input type="radio" name="group2" id="deffence" value="3" > Deffence
    <input type="radio" name="group2" id="public_sector" value="4" > Public Sector
    </p></div><br>
  <% end %>
  <div class="Mother-detail"><h4> b) Mother's Occupation</h4></div>
  <%= f.simple_fields_for :mother_datas do |mother_data|%>
    <%= mother_data.input :name,:label => "Mother's Name"%><br/>
    <%= mother_data.input :qualification, as: :select, :collection => [['Graduate','Graduate'],['Post Graduate','Post Graduate'],['Professional','Professional'],['Others','Others']]%><br/>
    <%= mother_data.input :qualification_proof, as: :file %><br/>
    <%= mother_data.input :annual_income, as: :select, :collection => [['Below One Lakh','Below One Lakh'],['1 to 2 Lakhs','1 to 2 Lakhs'],['2 to 3 Lakhs','2 to 3 Lakhs'],['3 to 4 Lakhs','3 to 4 Lakhs'],['4 to 5 Lakhs','4 to 5 Lakhs'],['Above 5 Lakhs','Above 5 Lakhs']]%><br/>
    <%= mother_data.input :occupation_designation, :label => "Occupation / Designation"%><br/>
    <%= mother_data.input :organisation_name%><br/>
    <%= mother_data.input :organisation_address%><br/>
    <div id="mother_data"><p><input type="radio" name="group3" id="private-mother" value="0"> Private
    <input type="radio" name="group3" id="central-mother" value="1" > Central Government
    <input type="radio" name="group3" id="state-mother" value="2"> State Government
    <input type="radio" name="group3" id="deffence-mother" value="3" > Deffence
    <input type="radio" name="group3" id="public-mother" value="4" > Public Sector
    </p></div><br>
    <h4>Other Details</h4>
    <%= f.input :reference %><br/>
    <%= f.input :remarks %><br/>
  <% end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                registration_forms_path, :class => 'btn' %>
  </div>
<% end %>
