  <% end %><br/>
  <div class="Mother-detail"><h4> b) Mother's Occupation</h4></div>
  <%= f.simple_fields_for :mother_datas do |mother_data|%>
    <%= mother_data.input :name,input_html: { id: 'mother_name_upper'},:label => "Mother's Name"%><br/>
    <%= mother_data.input :qualification, as: :select, :collection => [['Graduate','Graduate'],['Post Graduate','Post Graduate'],['Professional','Professional'],['Diploma Holders / Others','Diploma Holders / Others']]%><br/>
    
    <!-- <%#= mother_data.input :qualification_proof, as: :file, label:"Qualification Proof" %><br/> -->
    <%= mother_data.input :professional,label:"Profession",as: :radio_buttons,:collection=>[['Home Maker',true],['Others',false]]%><br/><br/>
    <div id="mother_qual">
    <%= mother_data.input :annual_income,  label:"Annual Income",as: :select, :collection => [['Below One Lakh','Below One Lakh'],['1 to 2 Lakhs','1 to 2 Lakhs'],['2 to 3 Lakhs','2 to 3 Lakhs'],['3 to 4 Lakhs','3 to 4 Lakhs'],['4 to 5 Lakhs','4 to 5 Lakhs'],['Above 5 Lakhs','Above 5 Lakhs']]%><br/>
    <!-- <%#= mother_data.input :income_proof, as: :file, label:"Income Proof" %><br/> -->
    <%= mother_data.input :occupation_designation,input_html: { id: 'mother_occ_upper'}, :label => "Occupation / Designation"%><br/>
    <%= mother_data.input :organisation_name,input_html: { id: 'mother_org_upper'},label:"Organisation Name"%><br/>
    <h5>Organisation Address</h5>
    <%= mother_data.input :organisation_address,input_html: { id: 'mother_addr1_upper'},label:"Line 1"%><br/>
    <%= mother_data.input :organisation_address2,input_html: { id: 'mother_addr2_upper'},label:"Line 2"%><br/>
      <%= mother_data.input :organisation_type,label:"Organisation Type",as: :radio_buttons, collection: [['Private','Private'],['Central Government','Central Government'],['State Government','State Government'],['Defence','Defence'],['Public Sector','Public Sector']] %><br/>
  <% end %><br/>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, value:"Submit",:class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                new_registration_form_path, :class => 'btn' %>
  </div>
<% end %>
